        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="rootPath" TextChanged="RootPath_TextChanged" HorizontalAlignment="Left" Height="23" Margin="92,75,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="439"/>
        <Label Content="元数据目录：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,74,0,0"/>
