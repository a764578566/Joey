        <Label Name="Param" Content="Label" HorizontalAlignment="Left" Margin="501,280,0,0" VerticalAlignment="Top"/>
        <Label Content="将页面开放程度为不开放跟部分开放的页面修改为完全开放页面(除业务参数页面)" HorizontalAlignment="Left" Margin="36,320,0,0" VerticalAlignment="Top"/>
        <Button Content="点击按钮修改" HorizontalAlignment="Left" Margin="490,320,0,0" VerticalAlignment="Top" Width="78" Click="Button_Click_1"/>
    </Grid>
</Window>
