        <TextBox Name="rootPath" HorizontalAlignment="Left" Height="23" Margin="36,118,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="561" RenderTransformOrigin="0.464,0.542"/>
        <Label Content="页面总数量：" HorizontalAlignment="Left" Margin="36,160,0,0" VerticalAlignment="Top"/>
        <Label Content="完全开放页面数量：" HorizontalAlignment="Left" Margin="36,200,0,0" VerticalAlignment="Top"/>
        <Label Content="部分开发页面数量：" HorizontalAlignment="Left" Margin="36,240,0,0" VerticalAlignment="Top"/>
        <Label Content="不开放页面数量：" HorizontalAlignment="Left" Margin="36,280,0,0" VerticalAlignment="Top"/>
        <Label Name="Total" Content="Label" HorizontalAlignment="Left" Margin="181,160,0,0" VerticalAlignment="Top"/>
        <Label Name="AllowAll" Content="Label" HorizontalAlignment="Left" Margin="181,200,0,0" VerticalAlignment="Top"/>
        <Label Name="AllowAdd" Content="Label" HorizontalAlignment="Left" Margin="181,240,0,0" VerticalAlignment="Top"/>
        <Label Name="NotAllow" Content="Label" HorizontalAlignment="Left" Margin="181,280,0,0" VerticalAlignment="Top"/>
